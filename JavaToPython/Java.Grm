comments
    //
    /*  */
end comments

compounds 
    'self. '== '!=
end compounds 

%--------------------%
%     Statements     %
%--------------------%

keys
 return new if else for true false while this
end keys

define acess_modifier
        'private
    |   'public
    |   'protected
end define


define boolean_operator
        '&&
    |   '|'|
end define

define comparator
        '==
    |   '!=
    |   '>
    |   '<
    |   '>=
    |   '<=
end define

define arithmatic_operator
        '+
    |   '-
    |   '*
    |   '/
    |   '%
end define

define program
    [repeat import_statement]
    [repeat class_declaration]
end define

define import_statement 
    'import [imported]';
end define

define imported
        [id]
    |   '*
    |   [id]'. [imported]
end define

define class_name
        [id]
    |   [id]'< [list id] '>
end define

define arithmatic_expression
       [arithmatic_expression] [arithmatic_operator] [arithmatic_expression]
    | [number]
    | [nested_identifier]
    | [stringlit]
    | [function_call]
end define

define nested_identifier
        [id] [repeat attribute]
    |   'this [repeat attribute]
end define

define attribute
        '. [SPOFF] [id] [SPON]
end define

define value
       [boolean_expression]
    |   [arithmatic_expression]
    |   [new_call]
    |   [function_call] 
    |   [nested_identifier]
    |   [number]
    |   [stringlit]
    |   'null
end define

define new_call
    'new [class_name] '(')
    |'new [class_name] '( [list value] ')
end define

define variable_declaration
        [class_name] [assignment]
    |   [class_name] [nested_identifier]';
end define

define assignment
        [nested_identifier] '= [value] '; [NL]
end define

define stmt_return
        'return [value] '; [NL]
end define

define statement
        [variable_declaration]
    |   [stmt_return]
    |   [conditional_block]
    |   [for_loop]
    |   [while_loop]
    |   [function_call]'; [NL]
    |   [assignment]
end define

define while_loop
    'while( [boolean_expression] ') [NL] '{ [NL] [IN] [repeat statement] [EX] '} [NL]
end define

define for_loop
    'for( [class_name] [id] ': [id] ') [NL] '{ [NL] [IN] [repeat statement] [EX] '} [NL]
end define

define conditional_block
    [if] [repeat else_if] [opt else]
end define

define if 
    'if '( [boolean_expression] ') '{  [repeat statement]  '}
end define

define else_if
    'else 'if '( [boolean_expression] ') [NL]'{ [NL] [IN] [repeat statement] [EX] '} [NL]
end define

define else
    'else [NL]'{ [NL] [IN] [repeat statement] [EX] '} [NL]
end define

define function_call
        [function_call] [SPOFF] '. [nested_identifier] ( [SPON] [list value]')
    |   [nested_identifier] [SPOFF] '( [SPON] [list value]')
end define

define boolean_expression
        '( [boolean_expression] ')
    |   [boolean_expression] [boolean_operator] [boolean_expression]
    |   '! [boolean_expression]
    |    [condition]
end define

define condition
        [condition_element] [comparator] [condition_element]
    | [condition_element]
end define

define condition_element
    [nested_identifier]
    | [function_call]
    | [number]
    | 'true
    | 'false
end define

define method_parameter
    [class_name] [id]
end define

define method_declaration
        [acess_modifier] [opt static] [class_name] [id] '( [list method_parameter] ') [NL] '{ [NL] [IN] [repeat statement] [EX] '} [NL]
    |   [acess_modifier] [opt static] [class_name] [id] '( [list method_parameter] '); [NL]
end define


%--------------------%
%        Class       %
%--------------------%
define class_declaration
    [acess_modifier] [class_type] [class_name] [NL] '{ [NL] [IN] [class_body_decl] [EX] '} [NL]
end define

define class_type
        'class
    |   'interface
end define

define static
    'static
end define

define volatile
    'volatile
end define

define constructor
    [acess_modifier] [id]'( [list method_parameter] ') [NL] '{ [NL] [IN] [repeat statement] [EX] '} [NL]
end define

define member_variable_declaration
    [opt acess_modifier] [opt static] [opt volatile] [variable_declaration]
end define

define class_body_decl
    [repeat member_variable_declaration] [opt constructor] [repeat method_declaration]
end define
