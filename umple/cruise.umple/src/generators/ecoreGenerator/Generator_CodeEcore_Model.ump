class EcoreEnumItem {
  depend java.util.*;

  isA EcoreGenericNode;
  
  Integer value;
  
  before constructor {
    setTagName("eLiterals");
  }
  
  Map<String,String> getNodeAttributes(){
    Map<String,String> map = super.getNodeAttributes();
    map.put("name", getName());
