//Namespace for core of the system.
namespace Geneology.core;

class Person{
 name;
 sex;
 placeOfBirth;
 dateOfBirth;
 placeOfDeath;
 dateOfDeath;
}

class Union{
 placeOfMarriage;
 dateOfMarriage;
 * -- 0..2 Person partner;
}

association {
 * Person child -- 0..1 Union parents;
}

association {
 0..2 Person adoptiveParents -- * Person adoptedChild;
}

