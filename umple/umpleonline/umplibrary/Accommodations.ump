// UML class diagram in Umple representing bookings in accommodations

namespace accommodations;

class UnitFacility
{
  unit_attribute_code;
  unit_attribute_description;
  key {unit_attribute_code}
}

class Location
{
  Integer id;
  short_name;
  full_name;
  description;
  address;
  manager;
  phone;
  other_location_details;
  
  key {id}
}

//Unit_Facilities
association
{
  * UnitFacility -- * Unit;
}

class Unit
{
  id;
  Integer unit_number;
  Integer bedroom_count;
  Integer room_count;
  other_unit_details;
  
  * -> 0..1 Location ;
  * hasUnit -> 0..1 UnitType type;
  
  key {id}
}

class UnitType
{
  code;
  description { Apartment, House}
  key {code}
}

class ViewUnitStatus
{
  Date status_date;
  available_yn;
  * -- 0..1 Unit;
  
  key {status_date}
}

class BookingStatus
{
  code;
  description { Confirmed, Provisional }
  
  key {code}
}

class UnitBooking
{
  id;
  Date start_date;
  Date end_date;
  other_booking_details;
  
  * -- 0..1 Unit;
  * -- 0..1 Guest;
  * -- 0..1 BookingStatus;
  
  key {id}
}

class Guest
{
  id;
  first_name;
  last_name;
  Date date_of_birth;
  other_guest_details;
  * -> 1 Gender;
  
  key {id}
}

class Gender
{
  code;
  gender_description {M, F, U}
  
  key {code}
}

//$?[End_of_model]$?
